    <nav class="navbar navbar-default navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/@Model["site.base-url"]">@Model["site.title"]</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
@{
    var docs = Documents["PageTree"];
    var rootDocs = docs.Where(x => x.Get<IDocument>("Parent") == null).OrderBy(x => x.Get<object[]>("TreePath").Last().ToString());

    foreach (var rootDoc in rootDocs) {
        var documentPath = rootDoc.Get<object[]>("TreePath", new object[] {});
        var value = string.Join(";", documentPath.Cast<string>());
        var children = rootDoc.Get<IEnumerable<IDocument>>("Children");
        var hasChildren = children.Count() > 0;
        @if (hasChildren) {
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@value <span class="caret"></span></a>
                            @Html.Partial("partials/_navBarMenu", children.First()) 
                    </li>
                </ul>
        }
    }    
}
            </div>
        </div>
    </nav>